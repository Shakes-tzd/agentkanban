{
  "name": "ijoka",
  "version": "0.1.0",
  "private": true,
  "description": "Unified observability and orchestration for AI coding agents - yoking agents together",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shakes-tzd/ijoka"
  },
  "keywords": [
    "ai",
    "agents",
    "claude",
    "codex",
    "gemini",
    "orchestration",
    "observability",
    "tauri"
  ],
  "author": "Shakes",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @ijoka/desktop dev",
    "build": "pnpm --filter @ijoka/desktop build",
    "desktop:dev": "pnpm --filter @ijoka/desktop dev",
    "desktop:build": "pnpm --filter @ijoka/desktop build",
    "plugin:install": "cd packages/claude-plugin && claude /plugin install .",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
